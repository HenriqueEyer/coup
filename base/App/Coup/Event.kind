type App.Coup.Event {
  add_user(user: App.Coup.User)
  start_game
  action(value: App.Coup.Action)
} deriving (serializer, deserializer)

App.Coup.Event.serialize_post(ev: App.Coup.Event): String
  String.pad_right_exact(64, '0', Bits.hex.encode(Serializer.run!(App.Coup.Event.serializer, ev)))

App.Coup.Event.deserialize_post(hex: String): Maybe<App.Coup.Event>
  Deserializer.run!(App.Coup.Event.deserializer, Bits.hex.decode(hex))
